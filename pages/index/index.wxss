/* top bar */

.top-bar {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  position: fixed;
  z-index: 99;
  top: 0;
  width: 100%;
  height: 30px;
  box-shadow: 0px 2px 5px 0px rgba(0, 0, 0, 0.16), 0px 2px 10px 0px rgba(0, 0, 0, 0.12);
  color: #fff;
  background: #366cb3;
}

.top-bar .icon-with-text {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.top-bar .location-icon {
  width: 16px;
  height: 16px;
}

.top-bar .location-text {
  font-size: 15px;
  margin: 0 3px;
}

.article-list {
  margin-top: 40px;
}
