/**index.wxss**/

page {
  background: #f0f0f0;
}

.list-container {
  width: 100%;
}

.list-item {
  display: flex;
  flex-direction: row;
  box-shadow: 0px 2px 5px 0px rgba(0, 0, 0, 0.16), 0px 2px 10px 0px rgba(0, 0, 0, 0.12);
  margin: 3% 3%;
  padding: 3%;
  background: #fff;
  border-radius: 5px;
}

.avatar {
  width: 40px;
  height: 40px;
  border-radius: 200px;
}

.list-item .list-item-right {
  display: flex;
  max-width: 90%;
  flex-direction: column;
  justify-content: space-between;
}

.list-item .list-item-header {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.list-item .list-item-detail {
  display: flex;
  flex-direction: row;
  margin-left: 3%;
  justify-content: space-between;
  align-items: flex-end;
}

.list-item .item-author-text {
  font-size: 16px;
  color: #111;
  margin-left: 3%;
}

.list-item .list-item-text {
  font-size: 13px;
  color: #9c9c9c;
}

.list-item .location-container {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  margin-right: 3%;
}

.list-item .location-icon {
  width: 18px;
  height: 18px;
  margin-right: 3px;
}

.list-item .list-item-main-text {
  margin: 3%;
  font-size: 16px;
  text-align: justify;
}

.list-item .image-album {
  width: 100%;
  margin: 3%;
  display: flex;
  flex-direction: row;
}

.list-item .image-album-content {
  width: 30%;
  height: 99px;
  margin-right: 4px;
}

.list-item .video-item {
  display: flex;
  max-width: 100%;
  align-items: center;
  margin-left: 3%;
  margin-right: 3%;
}

.list-item .large-image-item {
  display: flex;
  max-width: 100%;
  align-items: center;
  margin-left: 3%;
  margin-right: 3%;
}

.list-item .link-item {
  display: flex;
  flex-direction: row;
  max-width: 100%;
  align-items: center;
  margin-left: 3%;
  margin-right: 3%;
  background: #F8F8F8;
  border-radius: 3px;
}

.list-item .link-thumb-image {
  max-width: 30%;
  height: 99px;
  margin: 3%;
  border-radius: 6px;
}

.list-item .link-text {
  font-size: 16px;
  color: #9c9c9c;
}

.list-item .item-action {
  display: flex;
  flex-direction: row;
  margin-top: 3%;
}

.list-item .icon-with-text-fire {
  display: flex;
  flex-direction: row;
}

.list-item .icon-with-text-reply {
  display: flex;
  flex-direction: row;
  margin-left: 25px;
}

.list-item .action-icon {
  width: 18px;
  height: 18px;
}

.list-item .action-text {
  font-size: 13px;
  color: #9c9c9c;
  margin-left: 3%;
}

.list-item .share-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  margin-right: 20px;
}

.list-item .share-icon {
  width: 18px;
  height: 18px;
}
