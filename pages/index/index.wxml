<!--index.wxml-->

<!--每一条内容-->
<view class="list-container" wx:for="{{ articleList }}">
  <view class="list-item">
    <!--作者头像-->
    <view class="avatar-container">
      <image class="avatar" mode="aspectFill" src="{{ item.authorAvatar }}" />
    </view>

    <!--右边的部分-->
    <view class="list-item-right">
      <!--右边的发布者信息-->
      <view class="list-item-header">
        <text class="item-author-text">{{ item.authorName }}</text>
        <view class="list-item-detail">
          <text class="list-item-text">{{ item.timestamp }}</text>
          <view class="location-container">
            <image class="location-icon" src="../../resources/home/location-gray.png" />
            <text class="list-item-text">{{ item.location }}</text>
          </view>
        </view>

        <!--右边发布的内容-->
        <view wx:if="{{ item.articleData.text }}" class="list-item-main-text">
          <text>{{ item.articleData.text }}</text>
        </view>

        <view wx:if="{{ item.articleType == 'pictures' }}" class="image-album">
          <image class="image-album-content" src="https://n1image.hjfile.cn/mh/2017/06/26/9ffa8c56cfd76cf5159011f4017f022e.jpg" />
          <image class="image-album-content" src="https://n1image.hjfile.cn/mh/2017/06/26/9ffa8c56cfd76cf5159011f4017f022e.jpg" />
          <image class="image-album-content" src="https://n1image.hjfile.cn/mh/2017/06/26/9ffa8c56cfd76cf5159011f4017f022e.jpg" />
        </view>

        <view wx:if="{{ item.articleType == 'video' }}" class="video-item">
          <image src="https://n1image.hjfile.cn/mh/2017/06/26/9ffa8c56cfd76cf5159011f4017f022e.jpg" />
        </view>

        <view wx:if="{{ item.articleType == 'picture' }}" class="large-image-item">
          <image src="{{ item.articleData.picture.url }}" />
        </view>

        <!--底部的按钮：加火、留言和分享-->
        <view class="item-action">
          <view class="icon-with-text-fire">
            <image class="action-icon" src="../../resources/home/fire-gray.png" />
            <text class="action-text">{{ item.fireCount }}</text>
          </view>
          <view class="icon-with-text-reply">
            <image class="action-icon" src="../../resources/home/comment.png" />
            <text class="action-text">{{ item.commentCount }}</text>
          </view>
          <view class="share-container">
            <image class="share-icon" src="../../resources/home/share.png" />
          </view>
        </view>
      </view>
    </view>

  </view>

</view>