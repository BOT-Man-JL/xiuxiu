/**circle.wxss**/

.title {
  font-size: 18px;
  color: #111;
  font-weight: bold;
  margin-bottom: 3px;
}

.followed-circles {
  display: flex;
  flex-direction: column;
  padding: 3px;
  margin-bottom: 20px;
}

.thin-divider {
  widows: 100%;
  height: 1px;
  background: #E0E0E0;
}

.large-divider {
  widows: 100%;
  height: 15px;
  background: #E0E0E0;
}

.followed-circles .circle-list {
  margin-top: 10px;
  width: 100%;
}

.followed-circles .circle-item {
  text-align: center;
  padding: 0 30rpx;
}

.followed-circles .circle-info {
  position: absolute;
  top: 30%;
  left: 0;
  right: 0;
  color: #ffffff;
  font-weight: normal;
  text-shadow: 1px 0 #666666, 0 1px #666666, 1px 0 #666666, 0 -1px #666666;
}

.followed-circles .circle-name {
  font-size: 20px;
}

.followed-circles .circle-detail {
  font-size: 14px;
}

.followed-circles .circle-item image {
  border-radius: 15px;
  width: 100%;
  height: 150px;
}

.finding-circles {
  display: flex;
  padding: 3px;
  justify-content: space-between;
}

.finding-circles .search{
  width: 25px;
  height: 25px;
  margin-right: 30rpx;
}

.finding-circles .finding-item{
  display: flex;
  flex-direction: row;
}

.finding-item .finding-item-container{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-top: 20rpx;
}

.finding-item .finding-image{
  width: 140rpx;
  height: 140rpx;
  margin-left: 20rpx;
  border-radius: 14rpx;
}

.finding-item .finding-detail{
  margin-left: 16px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.finding-detail .text-name{
  font-size: 20px;
  color: #373737;
}

.finding-detail .text-distance{
  font-size: 15px;
  color: #9C9C9C;
}

.finding-detail .text-detail{
  font-size: 15px;
  color: #9C9C9C;
}

.finding-item .finding-like-image{
  width: 30px;
  height: 30px;
  margin-right: 10px;
  text-align: center;
}

.center-layout{
  display: flex;
  flex-direction: row;
  justify-content:center;
  align-items: center;
}

.start-layout{
  display: flex;
  flex-direction: row;
  justify-content:center;
  align-items: flex-start;
}