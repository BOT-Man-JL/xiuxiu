/* circle-detail.wxss */

.circle-info {
  color: #fff;
  font-weight: normal;
  text-shadow: .5px 0 #888, 0 .5px #888, -.5px 0 #888, 0 -.5px #888;
}

.circle-info .circle-banner {
  width: 100%;
  height: 400rpx;
  filter: blur(1px) brightness(.85) drop-shadow(0 0 10px black);
}

.circle-info .circle-name {
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  font-size: 60rpx;
}

.circle-info .circle-location {
  position: absolute;
  top: 250rpx;
  left: 30rpx;
  font-size: 30rpx;
}

.circle-info .circle-detail {
  position: absolute;
  top: 320rpx;
  left: 30rpx;
  font-size: 30rpx;
}

/* tabs */

.tabs {
  width: 100%;
  height: 70rpx;
  display: flex;
  flex-direction: row;
}

.tab {
  flex: 1;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  color: #5d5d5d;
  font-size: 28rpx;
}

.tab.selected {
  color: #366CB3;
  border-bottom: 4rpx solid #366CB3;
}

.tabContent.hidden {
  display: none;
}
